# Proteger o arquivo .env
<FilesMatch "^\.env">
    Require all denied
</FilesMatch>

# Reescrever URLs para remover a extens達o .php
RewriteEngine On

# Reescrever URLs que terminam com / para o arquivo .php correspondente
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)/$ $1.php [L]


# Opcional: redirecionar URLs com extens達o .php para a vers達o sem extens達o
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.php [NC]
RewriteRule ^ %1 [R=301,L]
